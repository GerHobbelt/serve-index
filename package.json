{
  "name": "serve-directory",
  "description": "Serve directory listings",
  "version": "2.1.2",
  "author": "fisker Cheung <lionkay@gmail.com>",
  "license": "MIT",
  "repository": "fisker/serve-directory",
  "dependencies": {
    "accepts": "^1.3.5",
    "debug": "^3.0.1",
    "http-errors": "^1.6.3",
    "lodash.template": "^4.4.0",
    "mime-types": "^2.1.18",
    "parseurl": "^1.3.2"
  },
  "devDependencies": {
    "after": "^0.8.2",
    "babel-core": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.4.0",
    "finalhandler": "^1.1.1",
    "husky": "^0.14.3",
    "istanbul": "0.4.5",
    "mocha": "5.1.1",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "serve-static": "^1.13.2",
    "supertest": "^3.0.0"
  },
  "main": "dist/index.js",
  "files": [
    "LICENSE",
    "HISTORY.md",
    "dist/connection.js",
    "dist/default-options.js",
    "dist/directory.html",
    "dist/index.js",
    "dist/serve-directory.js",
    "dist/utils.js"
  ],
  "engines": {
    "node": ">= 4"
  },
  "scripts": {
    "precommit": "pretty-quick --staged",
    "update": "yarn upgrade-interactive --latest",
    "build": "cd build && sh build.sh",
    "release": "yarn build && np --no-yarn --no-cleanup",
    "test": "mocha --reporter spec --bail --check-leaks test/",
    "test-ci":
      "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --reporter spec --check-leaks test/",
    "test-cov":
      "istanbul cover node_modules/mocha/bin/_mocha -- --reporter dot --check-leaks test/"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
